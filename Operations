CollegeEntryTime =9
studentEnterTime=10
if(studentEnterTime<CollegeEntryTime):
    print("you can enter in the college")
elif(studentEnterTime==CollegeEntryTime):
    print("you can enter with late remarks")
else:
    print("go back to hostel")
CollegeEntryTime =9
studentEnterTime=9
