#nested conditions
age=12
if(age<18):
    print("age is less than 18")
    if (age<10):
        print("the person is a minor")
    else:
        print("the person is allowed in the theaters")


age=18
if(age<18):
    print("age is less than 18")
    if (age<10):
        print("the person is a minor")
    else:
        print("the person is allowed in the theaters")#range for this else is 10-17
else:
    print("age is greater than or equal to 18")
