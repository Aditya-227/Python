x=20
y=10
if (20>10):
    print("20 is greater than 10")
if (20<10):
    print("20 is less than 10")
if (x<y):
    print("x is greater than y")
else:
    print("x is equals to or less than y")
#student can enter the college if student enter time is less than college entry time
#if students come at college entry time then student is allowed but with late remarks
CollegeEntryTime =9
studentEnterTime=10
if(studentEnterTime<CollegeEntryTime):
    print("you can enter in the college")
else:
    print("go back to hostel")
CollegeEntryTime =9
